<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             util:ViewModelLocator.AutoWireViewModel="True"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:util="clr-namespace:SmartHouseLights.Util;assembly=SmartHouseLights"
             x:Class="SmartHouseLights.Views.LightDetailsView">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="{Binding Light.Name}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <StackLayout Orientation="Horizontal">
                <Label Text="State of Light: " />
                <Label Text="{Binding Light.OnState, Mode=TwoWay}"></Label>
            </StackLayout>
            
            <Button Command="{Binding FlipSwitchCommand}" Text="Flip switch"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>